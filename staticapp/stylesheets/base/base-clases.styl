/**
 * ThoyCA-ContMain {Contenido Dinamico de la pagina - divide en grids} 
 */
.ThoyCA_ContMain
	width 100%
	max-width 1366px
	display block
	position relative
	margin 25px auto
	flexdiv(null,null,null,true)
	.ThoyCA_ContMain-MoPrincipal,.ThoyCA_Contenido-Aside
		/*Cambiar en responsivo*/
		width 100%
		position relative
		box-sizing border-box
		margin 20px 0
		padding 10px 10px 100px 10px
/**/
.ThoyCA_Nota
	width 100%
	display block
	position relative
	margin 70px 0
	h1
		padding 40px 0
		text-align center
		font-size 4em
		background-color primario
		margin 0
		color white
		font-family 'Roboto Condensed', sans-serif
		font-weight 100
.ThoyCA_Nota-Cont
	width 100%
	max-width 960px
	display block
	position relative
	margin 25px auto
	box-sizing border-box
	z-depth(0)
	background-color texto-blanco
	overflow hidden
	figure
		height 0
		display block
		overflow hidden
		position relative
		width 100%
		margin 0
		padding 0
		padding-bottom 56.25% /* our ratio for this image, you can adjust this accordingly */
		background-color #4f5a65
		img
			position absolute
			top 0
			margin 0
			left 0
			width 100%
			height 100%
	h2
		width 100%
		padding 20px 10px
		text-align left
		color texto-secundario
		margin 0
		font-size 2rem
		font-weight bold
	p
		width 90%
		padding 20px 10px
		margin 0 auto
		font-size 1.4rem
		font-weight 100
		position relative
		word-break break-all
		iframe
			width 100%
			display block
			margin 0 auto
		
	
		
				
		
				
				
					
				
		
	
	