/**
 * Seccion "base.styl"
 *
 * Contiene todos los estilos de las etiquetas semanticas principales
 * del proyecto.
 */


/**
 * BODY
 */
html,body
	-moz-osx-font-smoothing grayscale 
	-webkit-font-smoothing antialiased
	display block
	font-family 'Roboto Condensed', sans-serif
	font-size 66.6%
	font-weight 400
	margin 0
	padding 0
	position relative
	background-color primario-lv-2
	text-rendering optimizeLegibility
	width 100%
/**
 * HEADER 
 */
header
	background-color primario
	color texto-blanco
	height 70px
	margin 0 auto
	padding 0
	width 100%
	position fixed
	top 0
	z-index 9
	z-depth(0)
	nav
		box-sizing border-box
		display block
		flexdiv(space-between,center,null,false)
		height 70px
		margin 0 auto
		max-width 1366px
		padding 10px
		position relative
		width 100%
		.logo
			color texto-blanco
			font-family 'PT Sans Caption', sans-serif
			font-size 1.8rem
			display none
		ul
			flexdiv(space-between,center,null,false)
			list-style none
			padding 0
			li
				font-size 1.8rem
				margin 0 10px
				padding 0
				font-family 'Roboto Condensed', sans-serif
				threedText(5, rgba(0, 0, 0, .1), .25, 0.5, 0.35)
/**
 * UL Y LI 
 */
ul
	list-style none
	margin 0
	padding 0
li
	padding 0 
	margin 0
/**
 * H - TITULOS 
 */

h1,h2,h3,h4,h5,h6
	padding 0
	margin 0
/* ==========================================================================
   "ThoyCA" - Estilo que define los componentes de la aplicacion
   ========================================================================== */
.ThoyCA
	width 100%
	height auto
	display block
	margin 0 auto
	padding 0
	box-sizing border-box
	position relative



